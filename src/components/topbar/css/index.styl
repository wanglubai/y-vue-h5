.top-bar 
  width: 640px
  height: 88px
  background: #ff7e00
  display: flex
  position: fixed
  top: 0
  -webkit-box-pack: justify
  flex-flow: row nowrap
  justify-content: space-between
  align-items: center
  z-index: 51

.top-bar-logo 
  width: 186px
  height: 68px
  background: url('../../../commons/images/sprite-figure.png')
  background-position: 0 340px
  background-size: 500px 545px
  display: block
  margin-left: 10px

.top-bar-user 
  width: 56px
  height: 56px
  background: url('../../../commons/images/sprite-figure.png')
  background-position: -212px 882px
  background-size: 500px 545px
  margin-right: 10px
  display: block
  overflow: hidden

.top-bar-user img 
  border-radius: 30px
  width: 100%
  height: 100%
  display: block

.topbar-userinfo
  position: fixed
  top: 0 
  left: 0
  width: 100%
  height: 100% 
  background: rgba(0,0,0,.5)
  // pointer-events: none
  z-index: 999
.theme-default
  display: none !important;

  .userinfo-panel
    position: relative
    top: 50%
    left: 50%
    width:480px
    margin: -217px 0 0 -290px
    padding: 100px 50px 30px
    background: #fff 
    border-radius:16px
    font-size: 24px
    animation: move-in-bottom cubic-bezier(.22, .58, .12, .98) .6s

    .close-popup-btn
      position: absolute
      top: 20px 
      right: 20px
      width: 40px
      height: 40px 
      background: url('../images/icon_close.png') no-repeat center center
      background-size: contain

    .user-face 
      position: absolute
      top: -69px
      left: 221px
      width:138px
      height:138px
      border-radius: 50%
      img 
        width: 100% 
        height: 100%
        border-radius: 50%
        border:2px solid #ffffff
        overflow: hidden
        box-sizing: border-box
      .user-vip 
      .user-no-vip 
        position: absolute
        right: 0
        bottom: 0 
        width: 36px
        height: 29px
        background-image: url('../images/icon_vip.png')  
        background-position: center top
        background-repeat: no-repeat
        background-size: contain
      .user-no-vip
        background-image: url('../images/icon_no_vip.png')

    .user-info 
      text-align: center
      .user-info-name 
        opacity:0.8
        font-family:PingFangSC-Regular
        font-size:35px
        color:#2c2d32
        line-height:36px
        text-align:center
        .user-name 
          position: relative
          display: inline-block
          max-width: 320px 
          text-overflow: ellipsis
          white-space: nowrap
          overflow: hidden
        i 
          margin-top: -12px;
      .user-info-uid 
        margin-top: 16px
        font-family:PingFangSC-Regular
        font-size:24px
        line-height:24px
        text-align:center
        opacity: .5
    .user-account 
      width: 100%
      margin-top: 40px
      .user-account-name
      .user-account-number
        span,a
          width: 33.3% 
          text-align: center
          opacity:0.5
          font-size:26px
          color:#2c2d32
          line-height:24px
          text-align:center
      .user-account-number
        span,a 
          margin-top: 24px
          opacity:0.8
          font-size:32px
          line-height: 32px
  
    .user-exit
      margin: 40px auto 0
      width:480px
      height:76px
      font-size:32px
      line-height:  76px 
      color:#fbfbfb
      letter-spacing:10px
      text-align:center
      background:#ff7e00
      border-radius:8px
      
@import './userlevel.styl'

// Move in Bottom.
@keyframes move-in-bottom
  from
    opacity: 0
    transform: translate(0, 5em)

  to
    opacity: 1
    transform: translate(0, 0)